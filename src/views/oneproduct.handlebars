
<h1>Product Card</h1>

<div class="card text-center card text-bg-light mb-3" style="width: 18rem;">
    <div class="card-body">
        {{#if product.category}}
        <h5 class="card-title">{{product.category}}</h5>
        {{else}}
        <h5 class="card-title">Producto sin categoria</h5>
        {{/if}}

        {{#if product.title}}
        <p class="card-text">{{product.title}}</p>
        {{else}}
        <p>Producto sin nombre</p>
        {{/if}}

        {{#if product.price}}
        <p class="card-text">$ {{product.price}}</p>
        {{else}}
        <p>$ 0</p>
        {{/if}}

        {{#if product.stock}}
        <p class="card-text">{{product.stock}} u</p>
        {{else}}
        <p>0 u</p>
        {{/if}}
    </div>
</div>