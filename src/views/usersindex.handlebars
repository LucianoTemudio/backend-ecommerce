<h2>Users</h2>

<section>
    <div class="row row-cols-1 row-cols-md-5 g-3">
        {{#each user}}
        
            <div class="col">
                <div class="card card text-center" style="width: 18rem;">
                    <div class="card-body">
                        {{#if this.email}}
                        <h5 class="card-title">{{this.email}}</h5>
                        {{else}}
                        <h5 class="card-title">User sin email</h5>
                        {{/if}}

                        {{#if this.photo}}
                        <img width="50%" src={{this.photo}} alt="">
                        {{else}}
                        <p>User sin foto</p>
                        {{/if}}

                        {{#if this.password}}
                        <p class="card-text">{{this.password}}</p>
                        {{else}}
                        <p>User sin password</p>
                        {{/if}}
                        
                        <a href="/users/{{this._id}}" class="btn btn-primary">Ver detalle</a>
                        <a href="/carts?user_id={{this._id}}" class="btn btn-primary">Ver carrito</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</section>